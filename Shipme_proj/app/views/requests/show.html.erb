<h3>Accept/Reject Request</h3>
<p id="notice"><%= notice %></p>
<%= form_for(:requests, :url => {:action => 'accept', :id => @request.id }) do |f| %>
<%if @request.senders_id==nil%>
<p> An error occured maybe another carrier accepted to carry this package</p>
<%elsif @request.accept==true%>
<p> You have already accepted this request</p>
<%elsif @request.accept==false%>
<p> You have already rejected this request</p>
<%else%>

  
    
     
     <%= f.submit "Accept Request" %>
 
  <%end%>
  <%end%>

<%= form_for(:requests, :url => {:action => 'reject', :id => @request.id}) do |f| %>

<%if @request.senders_id!=nil&& @request.accept==nil%>


    <%= f.submit "Reject Request" %>
  
<%end%>
<%= form_for(:requests, :url => {:action => 'destroy', :id => @request.id}) do |f| %>
<%if @package==true && request.accept == true%>
<p>Sorry you have already confirmed that you recieved that package</p>
<%else%>
<%=f.submit "Cancel" %>
<%end%>
<%end%>





