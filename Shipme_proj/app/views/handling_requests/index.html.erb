<html>
  <body>
    <!--This view is intended to view users that sent requests to carrier and a link to accept or reject the request-->
    <!--Author: Mohamed M. Khairy -->
    <h1> Pending requests </h1>
    <% @users.to_a.each do |user| %>
      <% user.each do |n| %>
        <li>
          <th> <%= link_to n.username %> sent you a request of a package</th>
        </li>
        <%end%>
     <%end%>
     <% @requests.to_a.each do |request| %>
       <td class="actions">
         <th><%= link_to("Respond to request", {:action => 'show', :id =>  request.id}) %></th>
         <th><%= link_to("show package", {:action => 'show_package', :id =>  request.packages_id}) %></th>    
          <br>
        </td>
      <%end%> 
        
  </body>
</html>             

                                         
   
                                
                                  

              
                        

                
               


    
  

       

