<p>Averate rating</p>
<div id="star"></div>

<p>Your rating</p>
<div id="user_star"></div>

<script>
$('#star').raty({
  readOnly: true,
  rating: <%= @package.average_rating %>,
  path: '/assets/images'
});

$('#user_star').raty({
  rating: <%= @rating.rating %>,
  path: '/assets/images',
  click: function(rating, evt) {
    $.ajax({
      url: '/ratings/' + <%= @rating.id %>,
      type: 'PATCH',
      data: { rating: rating }
    }).done(function (data){});
  }
});
</script>