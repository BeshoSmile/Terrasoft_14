<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>Description,</th>
      <th>verified,</th>
      <th>reporter_Id,</th>
      <th>reported_Id,</th>
      <th>package_Id,</th>
    </tr>
  </thead>

  <tbody>
    <% @view_reportes.each do |v| %>
      <tr>
        <td><%= v.description %></td>
        <td><%= v.verified%></td>
        <td><%= v.reporters_id %></td>
        <td><%= v.reported_id %></td>
        <td><%= v.packages_id %></td>
        <td><a href = 'sendMail?id=<%=v.reported_id%>' >Send please verify Email</td>
      </tr>
    <% end %>
  </tbody>
</table>

