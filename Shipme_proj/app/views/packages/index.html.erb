<% @current_user_packages.each do |c| %>
	<li>Description:<%= c.description%>
			Destination:<%= c.destination%>
			Origin:<%= c.origin %>
			Package Value:<%= c.packageValue %>
			Expiry Date:<%= c.expiryDate %>
			Carrying Price:<%= c.carryingPrice %>
			Reciever Address:<%= c.receiverAddress %>
			Reciever Mobile:<%= c.receiverMobNumber %>
			Reciever E-Mail:<%= c.receiverEmail %>
			Package Weight:<%= c.weight %>
		<a href='/packages/edit?id=<%=c.id%>&'> edit</a>
	</li>
<%end%>