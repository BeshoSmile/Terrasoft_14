      pass=false
  break
 }
 if ((tempobj.type=="number"&&(tempobj.value=='' || tempobj.value.indexOf(" ") == 0 || isNaN(tempobj.value)) )||(tempobj.type.toString().charAt(0)=="s"&&tempobj.selectedIndex==-1)){
      pass=false
  break
 }
  }
   }
    }
  if (!pass){
     alert("One or more of the required elements are not completed or have wrong value. Please complete them, then submit again!")
    return false
  }
  else
    return true
  }
</script>
